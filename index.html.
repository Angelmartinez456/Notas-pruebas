<body>

  <header>
    <h1>üìù Mi App de Notas</h1>
    <p>Guarda ideas, pensamientos o tareas r√°pidas</p>
  </header>

  <div class="container">
    <textarea id="nota" placeholder="Escribe tu nota aqu√≠..."></textarea>
    <div id="guardado">üíæ Nota guardada</div>

    <div class="buttons">
      <button onclick="toggleModoOscuro()">üåô Modo Oscuro</button>
      <button onclick="cambiarColorFondo()">üé® Fondo</button>
      <input type="color" id="colorPicker" value="#f4f4f4" title="Color de fondo" />
      <button onclick="borrarNota()">üóëÔ∏è Borrar Nota</button>
    </div>
  </div>

  <footer>
    &copy; 2025 Mi App de Notas - Desarrollado por T√∫
  </footer>

  <script>
    const textarea = document.getElementById("nota");
    const guardado = document.getElementById("guardado");

    // Cargar nota guardada
    window.addEventListener("DOMContentLoaded", () => {
      const notaGuardada = localStorage.getItem("miNota");
      if (notaGuardada) {
        textarea.value = notaGuardada;
      }
    });

    // Guardar autom√°ticamente al escribir
    textarea.addEventListener("input", () => {
      localStorage.setItem("miNota", textarea.value);
      mostrarGuardado();
    });

    function mostrarGuardado() {
      guardado.classList.add("mostrar");
      setTimeout(() => {
        guardado.classList.remove("mostrar");
      }, 1500); // se oculta en 1.5 segundos
    }

    function toggleModoOscuro() {
      document.body.classList.toggle("dark-mode");
    }

    function cambiarColorFondo() {
      const color = document.getElementById("colorPicker").value;
      document.body.style.backgroundColor = color;
    }

    function borrarNota() {
      if (confirm("¬øEst√°s seguro de que quieres borrar la nota?")) {
        textarea.value = "";
        localStorage.removeItem("miNota");
        mostrarGuardado();
      }
    }
  </script>
